<div class="row">
  <% unless @article.archived? %>
    <div class="col-20">
      <p>
        <strong>
          <%= link_to comment.user.username, static_pages_dashboard_path %>
        </strong>
          <%= comment.body %>
           <br>
        <small>
             <%= time_ago_in_words(comment.created_at) %>
        </small>
      </p>
    </div>
  <% end %>

</div>
