<div style="margin-left: 25%; margin-top: 30%;">

  
    <div id="<%= dom_id @article %>">
      <div class="container">
        <div class="row">
          <div class="col-4">
              <p>
                <% if @article.image %>
                    <%= image_tag @article.image_url, style:"width: 200px; height: 200px;" %>
                <% end %>
              </p>
          </div>
          <div class="col-4">
             <div class="row">
                <div class="col-20">
                  <p class="border-bottom">
                    <strong>
                      <%= link_to @article.user.username, user_path(@article.user) %>
                    </strong>
                  </p>
                </div>
              </div>
              <div class="row">
                <div class="col-20">
                  <p class="border-bottom">
                    <strong>
                      <%= link_to @article.user.username, user_path(@article.user) %> &nbsp &nbsp
                      <%= @article.caption %>
                    </strong>

                  </p>
                </div>
              </div>
        <div class="border-bottom">
            <%= render @article.comments %>
        </div>
        <div class="container">
            <div class="row">
              <div class="col-2">
                <% if @article.liked?(current_user) %>
                  <%= button_to "like", article_like_path(@article), method: :put, disabled: @article.liked?(current_user) %>
                <% else %>
                  <%= button_to "like", article_like_path(@article), method: :put %>
                <% end %>
              </div>
              <div class="col-4">

                  <%= link_to "comment", article_path(@article), class:"fa-regular fa-heart" %>
                

              </div>
              <div class="col-2">
                share
              </div>                
            </div>     
            <br>
            <p class="border-bottom">
               <strong>
                <%= (Like.where(article_id:(@article.id)).count*336654).to_s + " likes" %>
              </strong><br>
            <div class="row">
              <%= render 'comments/form' %>
            </div>
               
        </div>
          </div>
        </div>

      </div>
    </div>
      
      
</div>


