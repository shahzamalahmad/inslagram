
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inslagram</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  </head>
<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <%= link_to "Inslagram", root_path, class: "navbar-brand", style:"width: 100px; margin-left: 25%;" %>
    <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
         <%= link_to "home", root_path, class: "dropdown-item", style:"margin-left: 50px;" %>


        </li>
        <li class="nav-item">
         <%= link_to "inbox", root_path, class: "dropdown-item", style:"margin-left: 20px;" %>

        </li>
        <li class="nav-item">
          <%= link_to "new", new_article_path, class: "dropdown-item", style:"margin-left: 20px;" %>

        </li>
        <li class="nav-item">
          <%= link_to "explore", root_path, class: "dropdown-item", style:"margin-left: 20px;" %>

        </li>
        &nbsp &nbsp
        <li class="nav-item">
          <%= render 'layouts/notification' %>
          <%#= link_to "likes", root_path, class: "dropdown-item", style:"margin-left: 20px;" %>
          <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"> -->

        </li>
        <li class="nav-item">

        </li>
        <%# binding.pry %>
          <li class="nav-item dropdown">
            <% if user_signed_in? %> 
              <%= link_to "profile", user_path(current_user), class: "dropdown-item", style:"margin-left: 20px;", class:"dropdown-item", style:"margin-left: 20px;" %>

                     
            <% else %>
            <%= link_to "sign in", new_user_session_path, class:"dropdown-item", style:"margin-left: 20px;" %>
            <%= link_to "sign up", new_user_registration_path, class:"dropdown-item", style:"margin-left: 20px;" %>

            <% end %>
          </li>
        
      </ul>
      
    </div>
  </div>
</nav>

  <body>
    <div>
      
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        
    </div>
     <%= yield %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
  </body>
</html>
