          <a href="#" class="list-group-item list-group-item-action disabled">Email notifications</a>
        </div>
      </div>
      <div class="col-sm">
          <!-- <h2>Edit <%#= resource_name.to_s.humanize %></h2> -->
          <div class="container">
            <div class="row">
              <div class="col-2">

                avatar
              </div>
              <div class="col-8">
                <strong>
                  <%= current_user.email %>
                </strong>
                <br>
                link
              </div>

              
            </div>
          </div>

<br>
<br>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="container">
                <div class="row">
                    <div class="col-3">
                      <%= f.label :Name %><br />
                    </div>
                    <div class="col-8">
                      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
                      <br>
                      
                      Help people discover your account by using the name you're known by: either your full name, nickname, or business name.
                    
                      You can only change your name twice within 14 days.
                    </div>
                </div>
                <div class="row">   
                    <div class="col-3">
                      <%= f.label :Username %><br />
                    </div>
                    <div class="col-8">
                      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
                      <br>
                        In most cases, you'll be able to change your username back to shahzamalahmad for another 14 days. 
                    </div>

                </div>
                <div class="row">
                    <div class="col-3">
                      <%= f.label :Website %><br />
                    </div>
                    <div class="col-8">
                      <%= f.text_field :website, autofocus: true, autocomplete: "website" %>
                    </div>
                </div>
                <div class="row">       
                    <div class="col-3">
                      <%= f.label :Bio %><br />
                    </div>
                    <div class="col-8">
                      <%= f.text_field :bio, autofocus: true, autocomplete: "bio" %>
                    </div>
                </div>
                <br>
                 <div class="row">       
                    <div class="col-3">
                    </div>
                    <div class="col-8">


                            Personal information
                            Provide your personal information, even if the account is used for a business, a pet or something else. This won't be a part of your public profile.
                    </div>
                <div class="row">    
                    <div class="col-3">
                      <%= f.label :email %><br />
                    </div>
                    <div class="col-8">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>
                </div>
                <div class="row">    
                    <div class="col-3">
                      <%= f.label :phone_Number %><br />
                    </div>
                    <div class="col-8">
                      <%= f.text_field :phone, autofocus: true, autocomplete: "phone_Number" %>
                    </div>
                </div>
                <div class="row">    
                    <div class="col-3">
                      <%= f.label :Gender %><br />
                    </div>
                    <div class="col-8">
                      <%= f.radio_button :gender, value: "male", autocomplete: "gender" %>
                      <%= f.label :Male %><br>

                      <%= f.radio_button :gender, value: "female", autocomplete: "gender" %>
                      <%= f.label :Female %><br />

                      <%= f.radio_button :gender, value: "costome", autocomplete: "gender" %>
                      <%= f.label :Costome %><br />

                      <%= f.radio_button :gender, value: "prefer not to say", autocomplete: "gender" %>
                      <%= f.label :Prefer_not_to_say %><br />
                    </div>
                  </div>
                </div>
              </div>

                    <div class="field">
                      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                      <%= f.password_field :current_password, autocomplete: "current-password" %>
                    </div>

            <div class="actions">
              <%= f.submit "Update" %>
            </div>
          <% end %>

          <h3>Cancel my account</h3>

          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

          <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
